h5
  |Para hoy 
  = Time.now.strftime("%d/%m/%Y") 
hr
.row.px-4.justify-content-around
  .col-11.col-md-3
    .card.text-white.bg-success 
      .card-body.text-center
        h5.card-title 
          | Presentes 
          = icon('fas', 'check')
        strong.card-text.text-white 
          = @correct.count
  .col-11.col-md-3
    .card.text-white.bg-warning 
      .card-body.text-center
        h5.card-title 
          | Atrasados 
          = icon('fas', 'stopwatch')
        strong.card-text.text-white 
          = @delayed.count
  .col-11.col-md-3
    .card.text-white.bg-danger 
      .card-body.text-center
        h5.card-title 
          | Ausentes 
          = icon('fas', 'calendar-times')
        strong.card-text.text-white 
          = @out.count

  .col-11.col-md-3
    .card.text-white.bg-secondary 
      .card-body.text-center
        h5.card-title 
          | Fuera de lugar 
          = icon('fas', 'crosshairs') 
        strong.card-text.text-white 
          = @away.count